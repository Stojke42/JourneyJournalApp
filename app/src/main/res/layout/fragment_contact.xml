<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".ContactFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/main_page_text1"
        android:layout_width="wrap_content"
        android:layout_height="363dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="I am Jane Doe"
        android:textSize="32sp" />
    <TextView
        android:id="@+id/main_page_text2"
        android:layout_width="wrap_content"
        android:layout_height="222dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="And I'm a Photographer and Traveller"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/main_page_text3"
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="Contact page : "
        android:textSize="22sp" />

    <TextView
        android:id="@+id/main_page_text4"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="email : jane@gmail.com "
        android:textSize="22sp" />


</FrameLayout>